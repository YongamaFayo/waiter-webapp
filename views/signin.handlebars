<div class="ui middle aligned center aligned grid">
  <div class="bomza">
    <div class="column">
      <h2 class="ui teal image header">
        {{!--
      <img src="" alt="" class="image"> --}}
        {{#if messages.access}}
        <div class="ui  message loginError orange">
          <h3>{{messages.access}}</h3>
        </div>
        {{/if}}
        <br>

        <div class="name">
          <h3>
            Log-in to your account
          </h3>
        </div>
        <br>

      </h2>
      <form class="ui large form" method="POST" action="/signin">
        <div class="ui stacked segment">

          <div class="field">
            <div class="ui left icon input">
              <i class="user icon"></i>
              <input type="text" name="signinUsername" placeholder="Username">
              <button class="ui fluid large teal submit button" type="submit">Login</button>
              {{!-- <a href="/days">Admin</a> --}}
            </div>
          </div>

        </div>
        <div class="field">
          {{!-- <button class="ui fluid large teal submit button" type="submit">Login</button> --}}
          <select name='job_Type' class="ui dropdown">
            <option value="" large>Job position</option>
            <option name='job_Type' value="waiter">Waiter</option>
          </select>
        </div>

        {{#if messages.error}}
        <div class="ui  message loginError orange">
          <h3>{{messages.error}}</h3>
        </div>
        {{/if}}
      </form>

      <div class="ui message">


        New to us?

        <a href="/signup">Sign Up</a>

      </div>
      <br>  
      {{!-- <div>
        <a href="/days">Admin</a>
      </div> --}}
    </div>
  </div>

  <script src="../public/control.js"></script>